/**index.wxss**/
.index-container{
  padding-top:79px;
}

/*nav*/
.index-nav{
    height:44px;
    line-height: 44px;
    display: flex;
    align-items: center;
    justify-content:flex-end;
    position: fixed;
    top: 0;
    z-index: 1;
    width: 100%;
    background-color: #ffffff;
    border-bottom:1px solid #d7d7d7;
}
.nav-icon{
  width:45rpx;
  height:45rpx;
}
.nav-icon image{
  width:100%;
  height:100%;
}
.nav-icon.nav-shopcart{
  margin:0 30rpx 0 44rpx;
  position: relative;
}

/*timeout*/
.index-timeout{
    height:35px;
    line-height: 35px;
    padding: 0 .3rem;
    width: 100%;
    position: fixed;
    top: 90rpx;
    z-index: 10;
    background: #fff;
    display: flex;
}
.timeout-text{
  font-size: 26rpx;
  color:#ff4455;
}
.timeout-block{
  display: flex;
  justify-content: center;
  align-items: center;
}
.timeout-block-item{
  width:47rpx;
  height:30rpx;
  line-height:30rpx;
  font-size: 26rpx;
  color:#222222;
  border:1px solid #999999;
  text-align: center;
}
.timeout-block-item:first-child{
  margin-left: 20rpx;
}
.timeout-block-point{
  height:30rpx;
  line-height:30rpx;
  font-size: 26rpx;
  color:#222222;
  text-align: center;
}

/*index-content*/
.page-init-loading{
  padding:30rpx;
  text-align: center;
  font-size:25rpx; 
}
.index-content{

}
.index-content-item{
  overflow: hidden;
}
.index-content-pic{
  position: relative;
  height:0;
  width:100%;
  overflow: hidden;
  padding-bottom: 50%;
}
.index-content-pic .content-image{
  width:100%;
  height:370rpx;
}
.index-content-pic .content-icon{
  width:100rpx;
  height:48rpx;
  top:15rpx;
  left:15rpx;
  position: absolute;
}
.index-content-text{
  padding-top:30rpx;
  padding-bottom: 60rpx;
  padding-left: 30rpx;
  display:flex;
}
.content-text-left{
  flex:0 0 70%;
}
.content-text-left-top{
  font-size:32rpx;
  color:#222222;
  font-weight: 700;
}
.content-text-left-bottom{
  font-size:24rpx;
  color:#666666;
  margin-top: 15rpx;
}
.content-text-right{
  flex:0 0 29%;
  text-align: center;
  border-left:1px solid #d7d7d7;
}
.content-text-right-top{
  font-size:32rpx;
  color:#ff4455;
  font-weight: 700;
  
}
.text-right-top-icon{
  font-size:22rpx;
  margin-right: 10rpx;
}
.content-text-right-bottom{
  color:#999999;
  font-size:22rpx;
  font-weight: 400;
  margin-top: 15rpx;
  text-decoration:line-through;
}
.backUp-btn{
  position: fixed;
  bottom: 118rpx;
  right: 35rpx;
  z-index: 9999;
  display: block;
  width:80rpx;
  height:80rpx;
}
.backUp-btn image{
  width:100%;
  height:100%;
}

