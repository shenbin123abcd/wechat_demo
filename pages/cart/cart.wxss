.shopCart-container{
    width:100%;
    height:100%;
}
.loading{
    padding:30rpx;
    text-align: center;
    font-size:25rpx; 
}
.shopCart-container-list{
    padding:0 30rpx;
    border-top:30rpx solid #f6f6f6;
}
.shopCart-container-list-item{
    display:flex;
    padding:30rpx 0;
    align-items: center;
}
.item-choose{
    width:40rpx;
    height:40rpx;
    flex:0 0 40rpx;
}
.item-choose image{
    width:100%;
    height:100%;
}
.no-choose-circle{
    width:38rpx;
    height:38rpx;
    border-radius:50%;
    overflow:hidden;
    border:1px solid #999999;
}
.item-content{
    flex:1 1 auto;
    margin-left:30rpx;
    display:flex;
    position: relative;
}
.item-content-pic{
    flex:0 0 45%;
    height:200rpx;
    padding-right:15rpx;
}
.item-content-pic image{
    width:100%;
    height:100%;
}
.item-content-info{
    height:200rpx;
    padding-left:15rpx;
    position:relative;
    flex:1 1 auto;
}
.item-content-info .title{
    font-size:28rpx;
    color:#222222;
    font-weight:700;
}
.item-content-info .subtitle{
    font-size:22rpx;
    color:#999999;
    margin-top: 10rpx;
}
.item-content-info .price-wrapper{
    position:absolute;
    bottom:0;
    left:15rpx;
    display:flex;
    align-items: center;
    justify-content: space-between;
    width:100%;
}
.item-content-info .price{
    color:#ff4455;
    font-size:24rpx;
}
.item-content-info .num{
    font-size:24rpx;
    color:#999999;
    padding-right:15rpx;
}
.item-content-line{
    width:100%;
    height:1px;
    background:#d7d7d7 ;
    position: absolute;
    left:0;
    bottom:-30rpx;
}
.shopCart-bottom-btn{
    position: fixed;
    bottom:0;
    width:100%;
    height:100rpx;
    display:flex;
    align-items: center;
    background: #fff;
    justify-content: space-between;
}
.all-choose-btn{
    display:flex;
    align-items: center;
    padding-left:30rpx;
}
.all-choose-btn .no-choose{
    width:38rpx;
    height:38rpx;
    border-radius:50%;
    overflow:hidden;
    border:1px solid #999999;
}
.all-choose-btn .all-choose{
    width:38rpx;
    height:38rpx;
}
.all-choose-btn .all-choose image{
    width:100%;
    height:100%;
}
.all-choose-btn .text{
    color:#222222;
    font-size:30rpx;
    margin-left: 25rpx;
}
.bottom-btn-right{
    display:flex;
    align-items: center;
}
.bottom-btn-right .pay-btn{
    height:100rpx;
    line-height: 100rpx;
    color:#fff;
    background: #ff4455;
    font-size:34rpx;
    width:240rpx;
    text-align: center;
}
.bottom-btn-right .pay-text{
    display:flex;
    align-items: center;
    font-size: 34rpx;
    color:#ff4455;
    margin-right: 25rpx;
}
.bottom-btn-right .pay-text .text{
    font-size:24rpx;
    color:#222222;
}
 