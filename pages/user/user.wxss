.user-container{

}
.init-loading{
    padding:30rpx;
    text-align: center;
    font-size:25rpx; 
}
.user-info{
    padding:64rpx 0; 
    margin:0 30rpx;
    border-bottom:1px solid #dedede;
}
.user-info-avatar{
    width:200rpx;
    height:200rpx;
    border-radius:50%;
    margin:auto;
    overflow: hidden;
    border:1px solid #dedede;
}
.user-info-avatar image{
    width:100%;
    height:100%;
}
.user-info-name{
    text-align:center;
    font-size:30rpx;
    color:#222222;
    margin-top: 35rpx;
    font-weight: 700;
}
.user-send-info{
    padding:35rpx 30rpx;
    display:flex;
    justify-content: center;
    align-items: center;
    border-bottom:30rpx solid  #f6f6f6;
}
.user-send-info-item{
    flex:0 0 33.333333%;
    height:80rpx;
    position: relative;
    border-right:1px solid #d7d7d7;
}
.user-send-info-item:last-child{
    border-right:none;
}
.user-send-info-item .item-pic{
    width:44rpx;
    height:40rpx;
    margin:auto;
}
.user-send-info-item .item-pic .item-num{
    width:30rpx;
    height:30rpx;
    line-height: 30rpx;
    border-radius:50%;
    overflow:hidden;
    background: #ff4455;
    position: absolute;
    top:-17rpx;
    right:78rpx;
    color:#fff;
    text-align: center;
    font-size:20rpx;
}   
.user-send-info-item .item-pic image{
    width:100%;
    height:100%;
}
.user-send-info-item .item-text{
    text-align: center;
    color:#222222;
    font-size: 24rpx;
    margin-top: 10rpx;
}
.user-link-list{
    padding:0 30rpx;
    border-bottom:30rpx solid  #f6f6f6;
}
.user-link-list:last-child{
    border-bottom:150rpx solid #f6f6f6;
}
.user-link-list-item{
    display:flex;
    justify-content: space-between;
    padding:35rpx 0;
    border-bottom:1px solid #dedede;
}
.user-link-list-item:last-child{
    border-bottom:none;
}
.user-link-list-item .left{
    display:flex;
    justify-content: center;
    align-items: center;
    color:#222222;
    font-size:30rpx;
}
.user-link-list-item .left image{
    width:33rpx;
    height:34rpx;
    margin-right:30rpx;
}
.user-link-list-item .right image{
    width:15rpx;
    height:34rpx;
}